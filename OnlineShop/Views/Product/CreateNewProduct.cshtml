@model OnlineShop.Models.Product
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Shop/shop.css" />
</head>
<body>

    <div class="left-side">
        @await Html.PartialAsync("_MainMenu")
    </div>
    <div class="right-side">
        <div class="top-right-split"></div>
        <div class="bottom-right-split">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="CreateNewProduct">
                <input type="hidden" asp-for="Id" />
                <div class="border p-3">
                    <div class="form-group row">
                        <h2 class="text-black-50 pl-3">Add Item</h2>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Name"></label>
                                </div>
                                <div class="col-4">
                                    <label asp-for="Price"></label>
                                </div>
                                <div class="col-4">
                                    <label asp-for="Quantity"></label>
                                </div>

                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="col-4">
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <div class="col-8 offset-2 row">
                                    <div class="col">
                                        <input type="submit" name="CreateNewOrderViewModel" class="btn btn-info w-75" value="Create" />
                                    </div>
                                    <div class="col">
                                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>

</body>
</html>
@await Html.PartialAsync("_ValidationScriptsPartial")