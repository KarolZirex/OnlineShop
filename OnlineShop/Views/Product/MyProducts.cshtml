
@model IEnumerable<OnlineShop.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Shop/shop.css" />
</head>
<body>

    <div class="left-side">
        @await Html.PartialAsync("_MainMenu")

    </div>
    <div class="right-side">
        <div class="top-right-split"></div>
        <div class="bottom-right-split">

            @if (Model.Count() == 0)
            {
                <p>nothing there yet</p>
            }
            else
            {
                <table class="table table-bordered table-striped" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Modify</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <th>@product.Name</th>
                                <th>@product.Price</th>
                                <th>@product.Quantity 
                                    <a asp-action="AddQuantity" asp-route-id="@product.Id">
                                    <img src="https://e7.pngegg.com/pngimages/272/936/png-clipart-computer-icons-desktop-plus-and-minus-signs-restart-miscellaneous-sign.png" height="40" width="40"/>
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger w-50">Delete</a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

</body>
</html>