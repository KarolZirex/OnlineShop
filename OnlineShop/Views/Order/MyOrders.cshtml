@using System.Xml.Linq
@model IEnumerable<OnlineShop.Models.Order>

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Shop/shop.css" />
</head>
<body>
    
    <div class="left-side">
        @await Html.PartialAsync("_MainMenu")

    </div>
    <div class="right-side">
        <div class="top-right-split"></div>
        <div class="bottom-right-split">
            @{
                if (Model.Count()== 0)
                {
                    <p>nothing there yet</p>
                }
                else
                {
                    <table class="table table-bordered table-striped" style="width: 100%">
                        <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Delivery type</th>
                            <th>Date</th>
                            <th>Price</th>
                            <th>Modify</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <th>@order.Customer.Name @order.Customer.LastName </th>
                                <th>@order.Product.Name </th>
                                <th> @order.Delivery.Name </th>
                                <th> @order.DateTime.Date.ToString("d") </th>
                                <th> @order.Price </th>
                                <th><a class="btn btn-danger"  asp-action="DeleteOrder" asp-route-id="@order.Id" >Delete</a></th>
                            </tr>
                        }
                        </tbody>

                    </table>
                }

            }
        </div>
    </div>

</body>
</html>